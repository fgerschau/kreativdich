mixin socialbar
  // Requires post.title and url variables to be rendered
  .row
    .social-bar
      ul
        li
          .social-button
            a(href="https://www.pinterest.com/pin/create/button/")
              img(src="//assets.pinterest.com/images/pidgets/pinit_fg_en_rect_gray_20.png")
        li
          .social-button
            a(target='_blank', href="//www.reddit.com/submit?url=" + url)
              img(src="//www.redditstatic.com/spreddit7.gif" alt="submit to reddit" border="0")
        li
          .social-button
            .fb-share-button(data-href=url, data-layout='button_count', data-size='small', data-mobile-iframe='true')
              a.fb-xfbml-parse-ignore(target='_blank', href='https://www.facebook.com/sharer/sharer.php?u=https%3A%2F%2Fdevelopers.facebook.com%2Fdocs%2Fplugins%2F&amp;src=sdkpreparse') Teilen
        li
          .social-button
            a.twitter-share-button(href='https://twitter.com/intent/tweet?hashtags=kreativdich&text=' + post.title, data-size='small')
              | Twittern
